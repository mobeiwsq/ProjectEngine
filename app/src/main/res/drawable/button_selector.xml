<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                    android:startColor="@color/color_button_start"
                    android:endColor="@color/color_button_end"
                    android:angle="270" />
            <corners
                    android:radius="50dp" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true" >
        <shape>
            <gradient
                    android:startColor="#ffc2b7"
                    android:endColor="#ffc2b7"
                    android:angle="270" />
            <corners
                    android:radius="50dp" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape>
            <gradient
                    android:startColor="@color/color_button_start"
                    android:endColor="@color/color_button_end"
                    android:angle="0" />
            <corners
                    android:radius="50dp" />
        </shape>
    </item>
</selector>