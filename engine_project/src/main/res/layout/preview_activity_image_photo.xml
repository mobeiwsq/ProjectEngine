<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/config_color_transparent">

    <com.mobeiwsq.engine_project.view.imageview.preview.view.PhotoViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/description_picture"
        android:background="@color/config_color_transparent" />

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical"
        android:layout_margin="12dp"
        android:gravity="center"
        android:textColor="@color/config_color_white"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="1/2" />

    <com.mobeiwsq.engine_project.view.imageview.preview.view.BezierBannerView
        android:id="@+id/bezierBannerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical|center_horizontal"
        android:paddingBottom="10dp"
        android:visibility="gone"
        app:bbv_selectedColor="@color/config_color_white"
        app:bbv_selectedRadius="4dp"
        app:bbv_spacing="6dp"
        app:bbv_unSelectedColor="@android:color/darker_gray"
        app:bbv_unSelectedRadius="4dp" />

</FrameLayout>
