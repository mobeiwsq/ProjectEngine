<?xml version="1.0" encoding="utf-8"?>
<!--*********************************************
  *                 widget控件的attrs               *
  **********************************************-->
<resources>
    <!-- =======   edittext===========================-->
    <attr name="ClearEditTextStyle" format="reference" />
    <attr name="PasswordEditTextStyle" format="reference" />

    <!--输入框文字-->
    <attr name="config_size_edittext_input_text" format="dimension" />
    <attr name="config_size_edittext_helper_text" format="dimension" />
    <attr name="config_size_edittext_components_spacing" format="dimension" />
    <attr name="config_size_edittext_left_padding" format="dimension" />
    <attr name="config_size_edittext_radius" format="dimension" />
    <attr name="config_size_edittext_height" format="dimension" />
    <!--输入文字的颜色-->
    <attr name="config_color_input_text" format="color" />
    <!--提示文字的颜色-->
    <attr name="config_color_hint_text" format="color" />

    <declare-styleable name="ClearEditText">
        <!--清除按钮的图片资源-->
        <attr name="cet_clearIcon" format="reference" />
        <!--清除按钮的图片尺寸-->
        <attr name="cet_clearIconSize" format="dimension" />
    </declare-styleable>

    <!-- PasswordEditText -->
    <declare-styleable name="PasswordEditText">
        <!--显示密码的图标资源-->
        <attr name="pet_iconShow" format="reference" />
        <!--隐藏密码的图标资源-->
        <attr name="pet_iconHide" format="reference" />
        <!--是否触摸显示密码-->
        <attr name="pet_hoverShowsPw" format="boolean" />
        <!--是否使用系统默认字体-->
        <attr name="pet_nonMonospaceFont" format="boolean" />
        <!--图标是否设置透明度, 默认是true-->
        <attr name="pet_enableIconAlpha" format="boolean" />
        <!--密码输入框文字的样式是否是“*”，默认是false-->
        <attr name="pet_isAsteriskStyle" format="boolean" />
    </declare-styleable>

    <attr name="MultiLineEditTextStyle" format="reference" />

    <declare-styleable name="MultiLineEditText">
        <!--最大输入文字的数目，默认240-->
        <attr name="mlet_maxCount" format="integer" />
        <!--是否忽略中英文的差异，默认true-->
        <attr name="mlet_ignoreCnOrEn" format="boolean" />
        <!--输入框提示文字-->
        <attr name="mlet_hintText" format="string|reference" />
        <!--输入框提示文字的颜色-->
        <attr name="mlet_hintTextColor" format="color|reference" />
        <!--输入框的padding， 默认10dp-->
        <attr name="mlet_contentPadding" format="dimension" />
        <!--输入框背景-->
        <attr name="mlet_contentBackground" format="reference" />
        <!--输入框的内容-->
        <attr name="mlet_contentText" format="string|reference" />
        <!--输入框文字的大小-->
        <attr name="mlet_contentTextSize" format="dimension|reference" />
        <!--输入框文字的颜色-->
        <attr name="mlet_contentTextColor" format="color|reference" />
        <!--输入框的高度，默认140dp-->
        <attr name="mlet_contentViewHeight" format="dimension|reference" />
        <!--输入框的高度是否是固定高度，默认是true-->
        <attr name="mlet_isFixHeight" format="boolean" />
        <!--统计数字显示剩余数目,默认false-->
        <attr name="mlet_showSurplusNumber" format="boolean" />

        <!--是否允许输入,默认true-->
        <attr name="mlet_enable_input" format="boolean" />

        <attr name="config_color_explain_text" format="color" />
        <attr name="config_size_explain_text" format="dimension" />

    </declare-styleable>

    <!--==============================Picker=======================================-->
    <declare-styleable name="WheelView">
        <attr name="wv_gravity" format="enum">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="wv_textSize" format="dimension" />
        <attr name="wv_textColorOut" format="color" />
        <attr name="wv_textColorCenter" format="color" />
        <attr name="wv_dividerColor" format="color" />
        <attr name="wv_lineSpacingMultiplier" format="float" />
    </declare-styleable>

    <attr format="color" name="colorAccent"/>

    <attr name="dialog_background_dim_amount" format="float" />

    <attr name="md_dialog_horizontal_margin" format="dimension"/>
    <attr name="md_dialog_max_width" format="dimension"/>
</resources>